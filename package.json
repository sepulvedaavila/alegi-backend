      "@aws-sdk/client-sqs": "^3.540.0",
      "@supabase/supabase-js": "^2.39.8",
      "bull": "^4.12.2",
      "cors": "^2.8.5",
      "dotenv": "^16.4.5",
      "express": "^4.18.2",
      "express-rate-limit": "^7.2.0",
      "helmet": "^7.1.0",
      "joi": "^17.12.2",
